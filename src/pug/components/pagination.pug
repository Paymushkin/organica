      a.pagination__link.pagination__link--active(href="#") 1
    li.pagination__item
      a.pagination__link(href="#") 2
    li.pagination__item
      a.pagination__link(href="#") 3
    li.pagination__item
      span.pagination__ellipsis ...
    li.pagination__item
      a.pagination__link(href="#") 10
    li.pagination__item
      a.pagination__link(href="#") 11
