//- Секция Новости
section.news
  .news__decoration
      include ../icons/decor-wave4
  .container
    h2.news__title Новости компании

    //- Табы
    .tabs(data-tabs="news")
      .tabs__list
        button.tabs__tab.is-active(type="button" data-tab="all") Все новости
        button.tabs__tab(type="button" data-tab="company") Новости компании
        button.tabs__tab(type="button" data-tab="industry") Новости индустрии

      .tabs__panels
        //- Все новости
        .tabs__panel.is-active(data-tab-panel="all")
          //- Контейнер для адаптивного слайдера
          .news__grid.news__slider
            .swiper(data-news-slider="all")
              .swiper-wrapper
                .swiper-slide
                  a.news-card(href="#")
                    .news-card__image
                      img(src="images/news/item-1.png" alt="Новость")
                    .news-card__body
                      time.news-card__date 14 сентября 2025
                      p.news-card__text Значимость этих проблем настолько очевидна, что консультация широким активом требуют определения и уточнения форм развития.
